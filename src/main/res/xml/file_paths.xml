<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedNamespace">

    <!-- Primary storage for captured images -->
    <external-files-path
        name="my_images"
        path="Pictures" />

    <!-- Cache directory for temporary files -->
    <cache-path
        name="my_cache"
        path="/" />

    <!-- General external storage fallback -->
    <external-path
        name="external_files"
        path="." />
</paths>